FROM node:20-alpine

# Install Docker CLI for container management
RUN apk add --no-cache \
    docker-cli \
    docker-compose

# Create non-root user and add to docker group
RUN addgroup -g 1001 -S nodejs && \
    addgroup -g 1337 docker && \
    adduser -S vehicle-edge -u 1001 -G docker

# Set working directory
WORKDIR /app

# Copy package files and environment
COPY package*.json ./
COPY .env ./

# Copy Kit-Manager
COPY Kit-Manager/ ./Kit-Manager/

# Copy Vehicle Edge Runtime source code
COPY src/ ./src/

# Install dependencies for both runtime and Kit-Manager
RUN cd /app && npm install && \
    cd /app/Kit-Manager && npm install

# Create data directories with proper permissions
RUN mkdir -p /app/data/applications /app/data/logs /app/data/configs && \
    chown -R vehicle-edge:nodejs /app/data /app/Kit-Manager /app/src && \
    chmod 755 /app/data/logs

# Switch to non-root user
USER vehicle-edge

# Expose WebSocket and Kit-Manager ports
EXPOSE 3002 3090

# Copy combined startup script with executable permissions
COPY --chmod=755 startup-combined.sh ./startup-combined.sh

# Start both Kit-Manager and Vehicle Edge Runtime
CMD ["./startup-combined.sh"]