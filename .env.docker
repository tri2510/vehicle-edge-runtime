# Docker Environment Configuration for Vehicle Edge Runtime

# Server Configuration
PORT=3002
LOG_LEVEL=info

# Kit Manager Connection
KIT_MANAGER_URL=ws://host.docker.internal:8080

# Data Storage
DATA_PATH=/app/data

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock

# Application Limits
MAX_CONCURRENT_APPS=10
DEFAULT_MEMORY_LIMIT=524288000
DEFAULT_CPU_LIMIT=50000

# Console Configuration
MAX_BUFFER_SIZE=10000
MAX_BUFFER_LINES=1000

# Vehicle Integration (for future use)
KUKSA_DATABROKER_URL=http://host.docker.internal:8090
VSS_CONFIG_PATH=/app/configs/vss.json

# Security
ENABLE_AUTH=false
JWT_SECRET=vehicle-edge-runtime-docker-secret

# Health Check
HEALTH_CHECK_PORT=3003

# Redis Configuration (for future caching)
REDIS_URL=redis://redis:6379

# Network Configuration
NODE_ENV=production